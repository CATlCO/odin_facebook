<div class="row">
<!-- 	<div class="col-md-2">
</div> -->
	<div class="col-md-5">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>
		<%= render 'friend_status', user: @user %>
		<h1>Friends</h1>
		<% @user.all_friends.each do |friend| %>
			<div>
				<%= gravatar_for(friend, 20) %>
				<%= link_to friend.name, user_path(friend) %>
			</div>
		<% end %>
	</div>
	<div class="col-md-6">
	<h1>Posts</h1>
	<%= render @user.posts %>
	</div>
</div>

