<% if current_user.pending_requests.any? %>
	<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Notifications <i class="glyphicon glyphicon-flag"></i></a>
	<ul class="dropdown-menu">
		<% current_user.pending_requests.each do |req| %>
	  <li><%= link_to "#{req.user.name} wants to be your friend.", user_path(req.user) %></li>
	  <% end %>
	</ul>
<% else %>
	<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Notifications </a>
		<ul class="dropdown-menu">
			<li>No new notifications.</li>
		</ul>
<% end %>